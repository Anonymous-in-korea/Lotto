package LottoGame;

public class Lotto {

	public static void main(String[] args) {
		// TODO Auto-generated method stub

		int choice;
		LottoCommon lotto = new LottoCommon();
		ManualLotto manual = new ManualLotto();
		AutoLotto auto = new AutoLotto();
		ResetOrEnd roe = new ResetOrEnd();

		loop:
		while (true) {
			
		choice = lotto.choiceStyle();

			switch (choice) {

			case 1:
				manual.manualLotto();
				break;

			case 2:
				auto.autoLotto();
				break;
				
			case 0://End
				roe.End();
				break loop;

			}// switch

		} // while

	}// main

}// class
